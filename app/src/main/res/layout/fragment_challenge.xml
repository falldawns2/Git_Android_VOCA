<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_Voca_Card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/memo_margin"
                    android:layout_marginLeft="@dimen/Challenge_margin"
                    android:layout_marginRight="@dimen/Challenge_margin"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:text="단어 카드"/>
                <TextView
                    android:id="@+id/txt_Voca_Card_Info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textColor="@color/SubTitle"
                    android:text="카드 형식으로 넘기면서 암기합니다."/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_Voca_Card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/memo_margin"
                    android:layout_marginLeft="@dimen/Challenge_margin"
                    android:layout_marginRight="@dimen/Challenge_margin"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:text="단어/뜻 맞추기"/>
                <TextView
                    android:id="@+id/txt_Voca_Card_Info2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textColor="@color/SubTitle"
                    android:text="3개 버튼 중 답을 골라 맞추세요."/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_Voca_Card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/memo_margin"
                    android:layout_marginLeft="@dimen/Challenge_margin"
                    android:layout_marginRight="@dimen/Challenge_margin"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:text="스펠링 맞추기"/>
                <TextView
                    android:id="@+id/txt_Voca_Card_Info3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/memo_margin"
                    android:textAlignment="center"
                    android:textColor="@color/SubTitle"
                    android:text="뜻을 보고 단어 스펠링을 쓰세요."/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>